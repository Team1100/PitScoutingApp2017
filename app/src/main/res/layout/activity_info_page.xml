<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team1100.pitscout2017.InfoPage"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/team_number_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="####"
            android:textColor="@android:color/black"
            android:textSize="14pt"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="Photos"
            android:onClick="openPhotos"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Team Name"
                android:textColor="@android:color/black"
                android:textSize="13pt"/>
            <EditText
                android:id="@+id/team_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="13pt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Drive Type"
                android:textColor="@android:color/black"
                android:textSize="13pt"/>
            <Spinner
                android:id="@+id/drive_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="CIM Count"
                android:textColor="@android:color/black"
                android:textSize="13pt"/>
            <Spinner
                android:id="@+id/cim_count"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Intake Type"
                android:textColor="@android:color/black"
                android:textSize="13pt"/>
            <Spinner
                android:id="@+id/intake_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Shoot Position"
                android:textColor="@android:color/black"
                android:textSize="13pt"/>
            <Spinner
                android:id="@+id/shoot_position"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Floor Gears"
                android:textColor="@android:color/black"
                android:textSize="13pt"
                />
            <Spinner
                android:id="@+id/gear_ability"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </Spinner>
            <CheckBox
                android:id="@+id/climber"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Climber"
                android:textColor="@android:color/black"
                android:textSize="13pt"/>
            <EditText
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Comments"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
